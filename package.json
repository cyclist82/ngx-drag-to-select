{
  "name": "ngx-drag-to-select",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "serve:ssr": "node dist/server.js",
    "build": "npm run clean && npm run build:app && npm run build:server",
    "build:ghpages": "npm run clean && npm run build:app -- --base-href /ngx-drag-to-select/ && npm run build:server",
    "build:ssr": "npm run build && npm run webpack:server",
    "build:prerender": "npm run build:ssr && npm run generate:prerender",
    "build:prerender-ghpages": "npm run build:ghpages && npm run webpack:server && npm run generate:prerender",
    "build:app": "ng build app --prod",
    "build:server": "ng build server --prod",
    "build:lib": "npm run clean && npm run build:lib:code && npm run build:lib:sass && npm run copy:styles && npm run copy:readme",
    "build:lib:code": "ng build ngx-drag-to-select --prod",
    "build:lib:sass": "node-sass projects/ngx-drag-to-select/src/scss/ngx-drag-to-select.scss -o dist/ngx-drag-to-select",
    "deploy": "ngh --dir dist/browser",
    "copy:styles": "cpr projects/ngx-drag-to-select/src/scss dist/ngx-drag-to-select/scss",
    "copy:readme": "copyfiles README.md dist/ngx-drag-to-select",
    "generate:prerender": "node dist/prerender.js",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "format:base": "prettier \"{src,cypress,projects}/**/*{.ts,.js,.json}\"",
    "format:check": "npm run format:base -- --list-different",
    "format:fix": "npm run format:base -- --write",
    "style": "npm run lint:check && npm run format:check",
    "style:fix": "npm run lint:fix && npm run format:fix",
    "clean": "del dist",
    "test": "ng test",
    "test:ci": "npm run test && start-server-and-test start http-get://localhost:4200 e2e:ci",
    "test:watch": "npm run test -- --watch",
    "lint:check": "ng lint",
    "lint:fix": "ng lint app --fix && ng lint ngx-drag-to-select --fix",
    "e2e": "cypress open",
    "e2e:ci": "cypress run --record --parallel --group $STAGE_NAME --browser chrome",
    "ci": "npm run lint:check && npm run format:check && npm run test:ci",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 -k ./projects/ngx-drag-to-select"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,projects,cypress}/**/*{.ts,.js,.json}": [
      "prettier --write",
      "git add"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^10.2.0",
    "@angular/cdk": "^10.2.5",
    "@angular/common": "^10.2.0",
    "@angular/compiler": "^10.2.0",
    "@angular/core": "^10.2.0",
    "@angular/forms": "^10.2.0",
    "@angular/material": "^10.2.5",
    "@angular/platform-browser": "^10.2.0",
    "@angular/platform-browser-dynamic": "^10.2.0",
    "@angular/platform-server": "^10.2.0",
    "@angular/router": "^10.2.0",
    "core-js": "^3.6.5",
    "rxjs": "^6.6.3",
    "tslib": "^2.0.0",
    "web-animations-js": "^2.3.2",
    "zone.js": "~0.11.2"
  },
  "devDependencies": {
    "@angular-builders/jest": "^10.0.1",
    "@angular-devkit/build-angular": "~0.1002.0",
    "@angular-devkit/build-ng-packagr": "~0.1002.0",
    "@angular/cli": "^10.2.0",
    "@angular/compiler-cli": "^10.2.0",
    "@angular/language-service": "^10.2.0",
    "@bahmutov/add-typescript-to-cypress": "^2.1.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@commitlint/travis-cli": "^11.0.0",
    "@cypress/webpack-preprocessor": "^4.0.4",
    "@nguniversal/express-engine": "^10.1.0",
    "@nguniversal/module-map-ngfactory-loader": "^8.2.6",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.2",
    "codelyzer": "^6.0.1",
    "conventional-changelog-cli": "^2.1.0",
    "copyfiles": "^2.4.0",
    "cpr": "^3.0.1",
    "cypress": "^3.5.0",
    "del-cli": "^3.0.1",
    "express": "^4.17.1",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "jest-preset-angular": "^8.3.2",
    "lint-staged": "^10.4.2",
    "ng-packagr": "^10.1.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "start-server-and-test": "^1.11.5",
    "ts-loader": "^8.0.6",
    "ts-node": "^9.0.0",
    "tslint": "~6.1.0",
    "typescript": "4.0.3",
    "webpack-cli": "^4.1.0"
  }
}
